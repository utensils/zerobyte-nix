{
  "permissions": {
    "allow": [
      "Bash",
      "Task",
      "Glob",
      "Grep",
      "LS",
      "Read",
      "Edit",
      "MultiEdit",
      "Write",
      "WebFetch",
      "WebSearch",
      "mcp__postgres__query"
    ]
  },
  "enabledMcpjsonServers": [
    "deadmansnitch",
    "coroot",
    "nixos",
    "playwright"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash(git commit*)",
        "hooks": [
          {
            "type": "command",
            "command": "format"
          }
        ]
      }
    ]
  }
}